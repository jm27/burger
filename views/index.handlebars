<div class="jumbotron">
    <div class="row justify-content-center text-center">
        <h1 class="col-12"> Eat da burger!!</h1>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text" id="bu" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h1> Waiting to be eaten!!</h1>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>{{this.burger_name}}</li>{{>burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h1> Devoured!!</h1>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{this.burger_name}}</li>{{>burgers/burger-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>